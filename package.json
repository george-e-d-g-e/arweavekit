{
  "name": "permawebjs",
  "version": "1.2.7",
  "description": "Utility library to build full stack permaweb applications",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "files": [
    "./dist/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "tsc": "tsc -p tsconfig.json && tsc -p tsconfig-cjs.json",
    "build": "rimraf ./dist && yarn tsc",
    "test": "jest --config jestconfig.json",
    "lint": "tslint -p  tsconfig.json",
    "format": "prettier --write src/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/labscommunity/permawebjs.git"
  },
  "author": "CommunityLabs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/labscommunity/permawebjs/issues"
  },
  "homepage": "https://github.com/labscommunity/permawebjs#readme",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node-fetch": "^2.6.2",
    "arlocal": "^1.1.60",
    "dotenv": "^16.0.3",
    "jest": "^29.4.2",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@bundlr-network/client": "^0.10.5",
    "@execution-machine/sdk": "^0.1.7",
    "@three-em/node": "^0.3.22",
    "arweave": "^1.13.5",
    "arweave-mnemonic-keys": "^0.0.9",
    "othent": "^1.0.49",
    "warp-contracts": "^1.4.1",
    "warp-contracts-plugin-deploy": "^1.0.3"
  },
  "exports": {
    "./auth": {
      "import": "./dist/esm/lib/auth.js",
      "require": "./dist/cjs/lib/auth.js"
    },
    "./contract": {
      "import": "./dist/esm/lib/contract.js",
      "require": "./dist/cjs/lib/contract.js"
    },
    "./serverless": {
      "import": "./dist/esm/lib/serverless.js",
      "require": "./dist/cjs/lib/serverless.js"
    },
    "./transaction": {
      "import": "./dist/esm/lib/transaction.js",
      "require": "./dist/cjs/lib/transaction.js"
    },
    "./wallet": {
      "import": "./dist/esm/lib/wallet.js",
      "require": "./dist/cjs/lib/wallet.js"
    }
  },
  "typesVersions": {
    "*": {
      "auth": [
        "dist/cjs/lib/auth.d.ts"
      ],
      "wallet": [
        "dist/cjs/lib/wallet.d.ts"
      ],
      "serverless": [
        "dist/cjs/lib/serverless.d.ts"
      ],
      "transaction": [
        "dist/cjs/lib/transaction.d.ts"
      ],
      "contract": [
        "dist/cjs/lib/contract.d.ts"
      ]
    }
  }
}
